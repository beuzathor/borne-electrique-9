---
import CategoryDropdown from './CategoryDropdown.astro';
---

<header class="sticky top-0 z-50 bg-white shadow-sm backdrop-blur-md bg-opacity-90">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        <img src="/logo.svg" alt="ElectroBorne Logo" class="w-12 h-12 group-hover:scale-105 transition-transform" />
        <span class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent">
          ElectroBorne
        </span>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <CategoryDropdown />
        <a href="/vehicules" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">
          VÃ©hicules
        </a>
        <a href="/outils" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">
          Outils
        </a>
        <a href="/configurateur" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">
          Configurateur
        </a>
      </nav>

      <!-- Menu mobile -->
      <button 
        id="mobileMenuButton"
        class="md:hidden p-2 text-gray-600 hover:text-indigo-600 transition-colors"
        aria-label="Menu mobile"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>