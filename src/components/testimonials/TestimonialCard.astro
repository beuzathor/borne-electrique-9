---
import type { Testimonial } from './types';
import StarRating from './StarRating.astro';

interface Props {
  testimonial: Testimonial;
}

const { testimonial } = Astro.props;
---
<article class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col">
  <StarRating rating={testimonial.rating} />
  
  <blockquote class="mt-6 flex-grow">
    <p class="text-gray-700 text-lg leading-relaxed">"{testimonial.content}"</p>
  </blockquote>
  
  <footer class="mt-6 pt-6 border-t border-gray-100">
    <div class="flex items-center gap-4">
      <div class="h-12 w-12 rounded-full bg-gradient-to-br from-indigo-600 to-blue-500 flex items-center justify-center text-white text-xl font-bold">
        {testimonial.author.name.charAt(0)}
      </div>
      <div>
        <cite class="not-italic font-semibold text-gray-900 block">
          {testimonial.author.name}
        </cite>
        <span class="text-sm text-gray-600">
          {testimonial.author.role}
        </span>
      </div>
    </div>
  </footer>
</article>